<section class="hero">
  <div class="container">
    <h1 class="c-fade-in">Welcome to Our Site</h1>
    <p class="c-fade-in">Discover amazing things with us</p>
    <a href="#" class="cta-button c-fade-in"> Get Started </a>
  </div>
</section>

<script>
  // Create intersection observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        // Add fade-in class when element becomes visible
        if (entry.isIntersecting) {
          // Add opacity: 0 first to ensure smooth transition
          entry.target.style.opacity = "0";
          // Force a reflow before adding the animation class
          entry.target.offsetHeight;
          entry.target.classList.add("fade-in");
        } else {
          // Remove the class when element is not visible
          entry.target.classList.remove("fade-in");
          entry.target.style.opacity = "1";
        }
      });
    },
    {
      threshold: 0.1, // Trigger when 10% of element is visible
      rootMargin: "50px", // Start animation slightly before element is in view
    }
  );

  // Observe all hero sections
  document.querySelectorAll(".c-fade-in").forEach((section) => {
    // Set initial opacity
    section.style.opacity = "0";
    observer.observe(section);
  });
</script>

